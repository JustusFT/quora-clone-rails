.row.topic-header
  = image_tag "http://lorempixel.com/256/256/"
  %h3= @topic.name
  %span
    - if TopicUser.where(topic_id: @topic.id, user_id: current_user.id).exists?
      = link_to "Unfollow Topic | #{@topic.users.count}", topic_unfollow_url(@topic), method: :delete, class: "btn btn-followed text-right"
    - else
      = link_to "Follow Topic | #{@topic.users.count}", topic_follow_url(@topic), method: :post, class: "btn btn-follow text-right"

%hr
.row
  .col-md-8
    %h4 Feed
    %hr
    - @topic.questions.each do |question|
      = render "questions/item", question: question
      %hr
  .col-md-4
    About
